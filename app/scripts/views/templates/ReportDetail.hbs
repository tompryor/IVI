<div class="header_trip_report row">
		
	<div class="col-xs-2">
		<button class="back_button_trip_report back_button button_override" id="back_button_report_detail">
			<i class="fa fa-arrow-left"></i>
		</button>
	</div>
	<div class="header_text_trip_report header_general col-xs-7" id="header_text_trip_report" data-contentKey="dss_tripreportdetailheader">
		Trip Report Detail
	</div>
	<div class="col-xs-3" id="button_container_email_trip_report">
		<button class="button_email_report button_override" id="button_email_report">
			<span class="button_text_email_report">Email Report</span>
		</button>
	</div>
</div>
<div class="body_trip_report row">
	<div class="map_trip_report col-xs-4" id="map_trip_report">
		<img src="../../images/test_map.png" id="trip_map"> 
	</div>
<!-- Begin Metrics Block -->	
	<div class="metrics_block_trip_report col-xs-6" id="metrics_block_trip_report">
	
		<div class="metrics_top_row_trip_report row">
			<div class="metrics_text_trip_report col-xs-12" data-contentKey="dss_tripdate">
				Trip Date: <br>
			</div>
			<div id="trip_date_trip_report" class="metrics_date_trip_report col-xs-12">
				{{ tripDate }}
			</div>
		</div>
	
		<div id="scrollable_trip_report" class="pre-scrollable">
			<div class="metrics_line">
			</div>
			
			<div class="metrics_row_trip_report row">
				<div class="metrics_text_trip_report col-xs-9" data-contentKey="dss_acceleration">
					Acceleration Incidents:
				</div>
				<div class="metrics_trip_report col-xs-3">
					{{ accelEventsTotal }}
				</div>
			</div>
			
			<div class="metrics_line">
			</div>
			<div class="metrics_row_trip_report row">
				<div class="metrics_text_trip_report col-xs-9" data-contentKey="dss_braking">
					Hard Braking Incidents:
				</div>
				<div class="metrics_trip_report col-xs-3">
					2
				</div>
			</div>
			
			<div class="metrics_line">
			</div>
			
			<div class="metrics_row_trip_report row">
				<div class="metrics_text_trip_report col-xs-9" data-contentKey="dss_distance">
					Distance (miles):
				</div>
				<div class="metrics_trip_report col-xs-3">
					25
				</div>
			</div>
			
			<div class="metrics_line">
			</div>
			
			<div class="metrics_row_trip_report row">
				<div class="metrics_text_trip_report col-xs-9" data-contentKey="dss_nightdriving">
					Night-Time Driving:
				</div>
				<div class="metrics_trip_report col-xs-3">
					80%
				</div>
			</div>
			
			<div class="metrics_line">
			</div>
			
			<div class="metrics_row_trip_report row">
				<div class="safety_tip_trip_report col-xs-12">
					<span class="safety_tip_header_text">SAFETY TIP:</span> 
					We can dance if we want to. We can leave your friends behind. 'Cause your friends dont dance and if they dont dance,
					well, they're no friends of mine. 
				</div>
			</div>
		</div>
	</div>
<!--  end metrics block -->
	<div class="scroll_buttons_trip_report col-xs-2">
		<div class="text-center">
			<button id="upButton_trip_report" class="upButton scroll_button_disabled button_override">
				<i class="fa fa-chevron-up"></i>
			</button>
			<button id="downButton_trip_report" class="downButton button_override">
				<i class="fa fa-chevron-down"></i>
			</button>
		</div>

	</div>
</div>